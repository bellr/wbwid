<script language='JavaScript'>
    function boxPay(){
        d = document.select_box.f_boxPay.value;
        if(d == 'extract') {
            document.getElementById('box_derect').style.display = 'none';
            document.getElementById('box_extract').style.display = 'block';
        }
        if(d == 'direct') {
            document.getElementById('box_extract').style.display = 'none';
            document.getElementById('box_derect').style.display = 'block';
        }
    }
    function Check_wmid(){
        if (!document.f_wmid.wmid.value.match('^[0-9]{12}$')) {
            alert('Номер WMID указан не верно');
            document.f_wmid.wmid.focus();
            return false;
        }
//ajaxVs({block:'gcontrol',act:'check_payment',p:dataRequest,extra:{columnInsert:obj.sn.value}});
    }
    function Check_ep(){
        if (!document.f_ep.purse.value.match('^[0-9]{8}$')) {
            alert('Номер EasyPay кошелька указан не верно');
            document.f_ep.purse.focus();
            return false;
        }
    }

</script>

<div style=' margin-left:20px;'>
